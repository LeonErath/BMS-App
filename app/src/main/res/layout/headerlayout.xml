<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="180dp"
        android:serverid="@+serverid/Header">

        <ImageView
            android:src="@drawable/background_new1"
            android:scaleType="centerCrop"
            android:layout_width="fill_parent"
            android:layout_height="700dp"
            android:serverid="@+serverid/headerimageView"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:serverid="@+serverid/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>


        <TextView

            android:layout_marginLeft="16dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dein Vorname Nachname"
            android:serverid="@+serverid/headerName"
            android:layout_above="@+serverid/headerEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Deine E-Mail Adresse"
            android:serverid="@+serverid/headerEmail"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>