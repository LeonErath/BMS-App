<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/tafel_schwarz"
    android:orientation="vertical"
    tools:context="leon.bms.AufgabenActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:serverid="@+serverid/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    android:fitsSystemWindows="true"
                    app:popupTheme="@style/AppTheme" />


            </android.support.design.widget.AppBarLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v4.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:serverid="@+serverid/cardView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardCornerRadius="0dp"
                                card_view:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="0dp"
                                    android:orientation="vertical">


                                    <com.rengwuxian.materialedittext.MaterialEditText
                                        android:serverid="@+serverid/editTextBeschreibung"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/aufgaben_vertical_size_row"
                                        android:layout_marginRight="8dp"
                                        android:hint="Hier den Titel eingeben"
                                        android:nextFocusDown="@+serverid/editTextNotizen"
                                        card_view:met_clearButton="true"
                                        card_view:met_floatingLabel="highlight"
                                        card_view:met_floatingLabelText="Titel"
                                        card_view:met_hideUnderline="true"
                                        card_view:met_iconLeft="@drawable/ic_assignment_black_48dp"
                                        card_view:met_maxCharacters="20"
                                        card_view:met_typeface="fonts/roboto_thin.ttf" />

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="1dp"
                                        android:background="#aeaeae"></RelativeLayout>

                                    <com.rengwuxian.materialedittext.MaterialEditText
                                        android:serverid="@+serverid/editTextNotizen"
                                        android:layout_width="match_parent"
                                        android:minHeight="@dimen/aufgaben_vertical_size_row"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="8dp"
                                        android:hint="Hier die Beschreibung eingeben"
                                        android:textSize="16dp"
                                        card_view:met_clearButton="true"
                                        card_view:met_floatingLabel="highlight"
                                        card_view:met_floatingLabelText="Beschreibung"
                                        card_view:met_hideUnderline="true"
                                        card_view:met_iconLeft="@drawable/ic_description_black_48dp"
                                        card_view:met_maxCharacters="200"
                                        card_view:met_typeface="fonts/roboto_thin.ttf" />

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="1dp"
                                        android:background="#aeaeae"></RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/aufgaben_vertical_size_row"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="8dp">

                                            <TextView
                                                android:serverid="@+serverid/textViewKurs"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_weight="0.3"
                                                android:text="Kurs:"
                                                android:textAppearance="?android:attr/textAppearanceMedium" />

                                            <Spinner
                                                android:serverid="@+serverid/spinner2"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_weight="0.7"
                                                android:prompt="@string/spinnerprompt"
                                                android:spinnerMode="dropdown"

                                                />
                                            #
                                        </LinearLayout>
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="1dp"
                                        android:background="#aeaeae"></RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/aufgaben_vertical_size_row"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="8dp">

                                            <TextView
                                                android:serverid="@+serverid/textView4"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_weight="0.3"
                                                android:text="Datum:"
                                                android:textAppearance="?android:attr/textAppearanceMedium" />

                                            <TextView
                                                android:serverid="@+serverid/textViewDatePicker"
                                                style="@style/Widget.AppCompat.Spinner"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_weight="0.7"
                                                android:text=" Datum auswählen"
                                                android:textColor="#000"
                                                android:textSize="16dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="1dp"
                                        android:background="#aeaeae"></RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/aufgaben_vertical_size_row"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="8dp">

                                            <TextView
                                                android:serverid="@+serverid/textView5"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_weight="0.3"
                                                android:text="Erinnerung:"
                                                android:textAppearance="?android:attr/textAppearanceMedium" />

                                            <TextView
                                                android:serverid="@+serverid/textViewTimePicker"
                                                style="@style/Widget.AppCompat.Spinner"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_weight="0.7"
                                                android:text=" Zeit auswählen"
                                                android:textColor="#000"
                                                android:textSize="16dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="1dp"
                                        android:background="#aeaeae"></RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/aufgaben_vertical_size_row"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="8dp">

                                            <TextView
                                                android:serverid="@+serverid/textView6"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_weight="0.3"
                                                android:text="Wichtigkeit:"
                                                android:textAppearance="?android:attr/textAppearanceMedium" />


                                            <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                                                android:serverid="@+serverid/toogleButton"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_weight="0.7"
                                                android:textSize="16sp"
                                                custom:activeBgColor="@android:color/holo_blue_dark"
                                                custom:activeTextColor="@android:color/white"
                                                custom:inactiveBgColor="#bcbcbc"
                                                custom:inactiveTextColor="@android:color/black"
                                                custom:separatorColor="@color/gray_very_light"
                                                custom:textToggleCenter="+2"
                                                custom:textToggleLeft="+1"
                                                custom:textToggleRight="+3"
                                                custom:toggleWidth="80dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="1dp"
                                        android:background="#aeaeae"></RelativeLayout>

                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                        </android.support.v4.widget.NestedScrollView>


                    </android.support.design.widget.CoordinatorLayout>

                    <android.support.design.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.RecyclerView
                                android:serverid="@+serverid/recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/aufgaben_vertical_size_row_recylcer"
                                app:layout_anchorGravity="bottom" />


                        </RelativeLayout>


                    </android.support.design.widget.CoordinatorLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <RelativeLayout
            android:serverid="@+serverid/overlay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp">

                <android.support.design.widget.FloatingActionButton
                    android:serverid="@+serverid/fabCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+serverid/fabGallarie"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_photo_camera_white_48dp"
                    app:backgroundTint="#00897B"
                    app:elevation="4dp"
                    app:fabSize="mini" />

                <android.support.design.widget.FloatingActionButton
                    android:serverid="@+serverid/fabGallarie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+serverid/fabAnimate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_insert_photo_white_48dp"
                    app:backgroundTint="#607D8B"
                    app:elevation="4dp"
                    app:fabSize="mini" />

                <android.support.design.widget.FloatingActionButton
                    android:serverid="@+serverid/fabAnimate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_add_white_48dp"
                    app:backgroundTint="#E91E63"
                    app:elevation="4dp" />

            </RelativeLayout>


        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
