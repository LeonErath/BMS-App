<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:serverid="@+serverid/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="leon.bms.Fragment_Highlight">

    <android.support.v4.widget.NestedScrollView
        android:serverid="@+serverid/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:serverid="@+serverid/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Deine Stunde:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:serverid="@+serverid/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#c1ffffff"
                app:cardCornerRadius="0dp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <TextView
                        android:serverid="@+serverid/textViewNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:text="10"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="25dp" />

                    <TextView
                        android:serverid="@+serverid/textViewStunde"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toEndOf="@+serverid/textViewNumber"
                        android:layout_toStartOf="@+serverid/textViewRaum"
                        android:text="Stundenname"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000" />

                    <TextView
                        android:serverid="@+serverid/textViewLehrer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+serverid/textViewStunde"
                        android:layout_marginRight="8dp"
                        android:layout_toEndOf="@+serverid/textViewNumber"
                        android:layout_toStartOf="@+serverid/textViewRaum"
                        android:text="Lehrer"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="14dp" />

                    <TextView
                        android:serverid="@+serverid/textViewRaum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Raum"
                        android:textAppearance="?android:attr/textAppearanceMedium" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:serverid="@+serverid/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="NÃ¤chste Stunde:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:serverid="@+serverid/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#c1ffffff"
                app:cardCornerRadius="0dp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <TextView
                        android:serverid="@+serverid/textViewNumber2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:text="10"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="25dp" />

                    <TextView
                        android:serverid="@+serverid/textViewStunde2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toEndOf="@+serverid/textViewNumber2"
                        android:layout_toStartOf="@+serverid/textViewRaum2"
                        android:text="Stundenname"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000" />

                    <TextView
                        android:serverid="@+serverid/textViewLehrer2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+serverid/textViewStunde2"
                        android:layout_marginRight="8dp"
                        android:layout_toEndOf="@+serverid/textViewNumber2"
                        android:layout_toStartOf="@+serverid/textViewRaum2"
                        android:text="Lehrer"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="14dp" />

                    <TextView
                        android:serverid="@+serverid/textViewRaum2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Raum"
                        android:textAppearance="?android:attr/textAppearanceMedium" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:serverid="@+serverid/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:text="Newscenter:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff" />

            <android.support.v7.widget.RecyclerView
                android:serverid="@+serverid/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
